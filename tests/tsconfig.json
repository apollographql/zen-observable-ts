{
  "include": [
    "./**/*.ts",
  ],
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "mocha", "chai"]
  }
}
